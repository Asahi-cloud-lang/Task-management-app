<% provide(:title, "Top") %>
<div class="jumbotron">
  <div class="flex">

    <div>
      <h1 class="top-title">Task App</h1>
      <p class="center">TaskAppは簡易ToDo管理ツールです。</p>
      <center>
        <% if logged_in? %>
          <% if current_user.admin? %>
            <%= link_to "アカウント作成", signup_path, class: "btn btn-lg btn-primary" %>
          <% else %>
            <p class="login-ban2">アカウント作成</p>
          <% end %>
        <% else %>
          <%= link_to "アカウント作成", signup_path, class: "btn btn-lg btn-primary" %>
        <% end %>
      </center>
    </div>

    <div>
    <h3>ログイン</h3>
      <div class="row">
        <div>
        <%= form_with(scope: :session, url: login_path, local: true) do |f| %>

        <%= f.label :email, class: "label-login" %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :password, class: "label-login" %>
        <%= f.password_field :password, class: 'form-control' %>
      
        <%= f.label :remember_me, class: "checkbox inline checkbox-login", for: "remember-me" do %>
        <%= f.check_box :remember_me, id: "remember-me" %>
        <span>ログイン情報を記憶する</span>
        <% end %>
        <% if logged_in? %>
          <p class="login-ban">ログイン状態です</p>
        <% else %>
          <%= f.submit "ログイン", class: "btn btn-primary btn-block btn-login" %>
          <p>ユーザー登録がまだの場合は<%= link_to "こちら", signup_path %></p>
        <% end %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
